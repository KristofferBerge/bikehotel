<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Settings"
             x:Class="BikeHotel.SettingsPage">
    <ContentPage.Content>
        <StackLayout Margin="30">
            <Button Text="Configure Flic"
                    Clicked="ConfigureFlicClicked" />
            <Button Text="Log out"
                    Clicked="SignOutClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>