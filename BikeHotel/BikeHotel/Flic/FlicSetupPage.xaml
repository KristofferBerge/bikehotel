<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BikeHotel.Flic.FlicSetupPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Pair a Flic button"
                   VerticalOptions="CenterAndExpand"
                   HorizontalOptions="CenterAndExpand"
                   Style="{StaticResource H1}" />
            <Label Text="When paired, the Flic bluetooth button can be pressd to open the door without opening the app. You will need the flic app installed on your phone as well to do this." />
            <Button Text="Add Flic"
                    Clicked="AddFlicClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>